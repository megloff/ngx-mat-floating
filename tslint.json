{
    "extends": "tslint:recommended",
    "rules": {
    "align": {
      "options": [
        "parameters",
        "statements"
      ]
    },
    "arrow-return-shorthand": true,
    "curly": true,
    "deprecation": {
      "severity": "warning"
    },
    "eofline": true,
    "import-spacing": true,
    "indent": {
      "options": [
        "spaces"
      ]
    },
        "interface-name": [
            true,
            "never-prefix"
        ],
        "max-line-length": [
            false,
            210
        ],
        "member-access": false,
        "member-ordering": [
            true,
            {
                "order": "fields-first"
            }
        ],
        "no-angle-bracket-type-assertion": false,
        "no-console": false,
        "no-empty": [
            true,
            "allow-empty-functions"
        ],
        "no-floating-promises": true,
        "no-misused-promises": true,
        "no-string-throw": false,
        "object-literal-key-quotes": false,
        "object-literal-shorthand": false,
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "prefer-const": true,
        "semicolon": true,
        "quotemark": [
            true,
            "double"
        ],
    "space-before-function-paren": {
      "options": {
        "anonymous": "never",
        "asyncArrow": "always",
        "constructor": "never",
        "method": "never",
        "named": "never"
      }
    },
        "trailing-comma": false,
        "triple-equals": [
            false,
            "allow-null-check",
            "allow-undefined-check"
        ],
    "typedef-whitespace": {
      "options": [
        {
          "call-signature": "nospace",
          "index-signature": "nospace",
          "parameter": "nospace",
          "property-declaration": "nospace",
          "variable-declaration": "nospace"
        },
        {
          "call-signature": "onespace",
          "index-signature": "onespace",
          "parameter": "onespace",
          "property-declaration": "onespace",
          "variable-declaration": "onespace"
        }
      ]
    },
        "variable-name": false,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    }
}
